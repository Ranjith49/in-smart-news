<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:id="@+id/article_list_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_list_imageview"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newssource"/>

        <TextView
            android:id="@+id/article_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/article_list_side_16_margin"
            android:layout_marginRight="@dimen/article_list_side_16_margin"
            android:layout_marginTop="24dp"
            android:maxLines="2"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/article_list_title_size"/>

        <TextView
            android:id="@+id/article_list_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/article_list_side_16_margin"
            android:layout_marginRight="@dimen/article_list_side_16_margin"
            android:maxLines="1"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/article_list_desc_auth_size"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/article_list_side_16_margin"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/article_list_side_16_margin">

            <TextView
                android:id="@+id/article_list_action1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/article_list_action_8_padding"
                android:text="@string/article_action_1"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/article_list_desc_auth_size"/>

            <TextView
                android:id="@+id/article_list_action2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/article_list_action1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/article_list_action_8_padding"
                android:text="@string/article_action_2"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/article_list_desc_auth_size"/>

            <ImageView
                android:id="@+id/article_list_action3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/article_list_action_8_padding"
                android:src="@drawable/down_outline"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/article_list_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/article_list_side_16_margin"
            android:layout_marginRight="@dimen/article_list_side_16_margin"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/article_list_desc_auth_size"
            android:visibility="gone"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
